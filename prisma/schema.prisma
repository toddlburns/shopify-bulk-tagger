generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Session {
  id            String   @id @default(cuid())
  name          String   @default("Default Session")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  rules         Rule[]
  answers       Answer[]
  certainties   Certainty[]
  products      Product[]
}

model Rule {
  id            String   @id @default(cuid())
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  type          String
  vendor        String
  tagType       String
  value         String
  certaintyPct  Int
  reason        String?

  createdAt     DateTime @default(now())
}

model Answer {
  id            String   @id @default(cuid())
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  questionId    String
  questionText  String
  answer        String

  createdAt     DateTime @default(now())
}

model Certainty {
  id            String   @id @default(cuid())
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  handle        String
  tagType       String
  value         String
  pct           Int
  source        String

  @@unique([sessionId, handle, tagType])
}

model Product {
  id              String   @id @default(cuid())
  sessionId       String
  session         Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  handle          String
  title           String
  vendor          String
  existingGenre   String?
  existingSubgenre String?
  existingDecade  String?

  @@unique([sessionId, handle])
}

// Global product catalog - uploaded once, used by all sessions
model CatalogProduct {
  id              String   @id @default(cuid())
  handle          String   @unique
  title           String
  vendor          String
  existingGenre   String?
  existingSubgenre String?
  existingDecade  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
